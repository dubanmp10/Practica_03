            soy=soy+" Acuatico,";
        }
        return soy;
    }
    void veneno(){
        string veneno="";
        if(venenoso){
            veneno = "Soy venenoso";
        }else{
            veneno = "No soy venenoso.";
        }
        cout<<veneno<<endl;
    }
};
//-----------------------------------------------------------------------------------------------------------------------------------

class Pez:virtual public SerVivo{
